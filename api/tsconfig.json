{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "common": ["../common/dist/index"],
      "common/dtos": ["../common/dist/dtos/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
